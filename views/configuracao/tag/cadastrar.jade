extends ../../layout

block content
	div(class="row")
		h2 TAGs
		p Cadastre uma nova tag no sistema.
	div(class="row")
		div(class="pull-left")
			div(class="btn-toolbar")
				a(href="/tags", class="btn btn-default") Listar Tags
	hr
	div(class="row")
		form(class="form-horizontal", role="form", method="POST", enctype="multipart/form-data", action="/tags/add")
			div(class="form-group")
				label(for="tag", class="col-sm-2 control-label") TAG:
				div(class="col-sm-10")
					span(class="btn btn-default btn-file") Selecionar um arquivo
						input(type="file", id="tag", name="tag")
			div(class="form-group")
				div(class="col-sm-offset-2 col-sm-10")
					button(type="submit", class="btn btn-success") Cadastrar
block javascript
	script(type='text/javascript', src='/javascripts/tags/upload.js')